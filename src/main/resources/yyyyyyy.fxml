<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="540.0" prefWidth="654.0"
            style="-fx-background-color: white;"
            stylesheets="@assests/styles/place-order-form.css"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.layeredarchitecture.controller.PlaceOrderFormController">

    <children>

        <!-- Header Background -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="80.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="654.0">
            <fill>
                <LinearGradient endX="0.048" endY="0.711">
                    <stops>
                        <Stop color="#1598d6"/>
                        <Stop color="WHITE" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </fill>
        </Rectangle>

        <!-- Home Icon -->
        <ImageView fitHeight="53.0" fitWidth="55.0" layoutX="22.0" layoutY="16.0" onMouseClicked="#navigateToHome" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assests/images/home-icon.png"/>
            </image>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ImageView>

        <!-- Title -->
        <Label layoutX="95.0" layoutY="24.0" text="Place Order">
            <font>
                <Font name="Lucida Sans Demibold" size="27.0"/>
            </font>
        </Label>

        <!-- Customer ID -->
        <ComboBox fx:id="cmbCustomerId" layoutX="14.0" layoutY="132.0" prefHeight="28.0" prefWidth="161.0" promptText="Customer ID :"/>

        <!-- Customer Name -->
        <TextField fx:id="txtCustomerName" layoutX="195.0" layoutY="132.0" prefHeight="28.0" prefWidth="437.0" promptText="Customer Name :"/>

        <!-- Item Code -->
        <ComboBox fx:id="cmbItemCode" layoutX="14.0" layoutY="178.0" prefHeight="28.0" prefWidth="161.0" promptText="Item Code :"/>

        <!-- Item Description -->
        <TextField fx:id="txtDescription" layoutX="195.0" layoutY="178.0" prefHeight="28.0" prefWidth="437.0" promptText="Item Description :"/>

        <!-- Qty on Hand -->
        <TextField fx:id="txtQtyOnHand" layoutX="17.0" layoutY="226.0" prefHeight="28.0" prefWidth="161.0" promptText="Qty. on Hand"/>

        <!-- Unit Price -->
        <TextField fx:id="txtUnitPrice" layoutX="195.0" layoutY="226.0" prefHeight="28.0" prefWidth="161.0" promptText="Unit Price"/>

        <!-- Quantity -->
        <TextField fx:id="txtQty" layoutX="370.0" layoutY="226.0" onAction="#txtQty_OnAction" prefHeight="28.0" prefWidth="161.0" promptText="Qty."/>

        <!-- Add Button -->
        <Button fx:id="btnSave" layoutX="558.0" layoutY="226.0" onAction="#btnAdd_OnAction"
                prefHeight="28.0" prefWidth="74.0" text="Add"
                style="-fx-cursor: hand;"/>

        <!-- Order Table -->
        <TableView fx:id="tblOrderDetails" layoutX="22.0" layoutY="280.0" prefHeight="189.0" prefWidth="615.0">
            <columns>
                <TableColumn prefWidth="77.0" text="Code"/>
                <TableColumn prefWidth="174.0" text="Description"/>
                <TableColumn prefWidth="64.0" text="Qty"/>
                <TableColumn prefWidth="99.0" text="Unit Price"/>
                <TableColumn prefWidth="88.0" text="Total"/>
                <TableColumn prefWidth="99.0" text="Delete"/>
            </columns>
        </TableView>

        <!-- Order ID -->
        <Label fx:id="lblId" alignment="CENTER_RIGHT" layoutX="486.0" layoutY="68.0"
               prefHeight="24.0" prefWidth="152.0" text="ORDER ID : OD001">
            <font><Font size="17.0"/></font>
        </Label>

        <!-- Date -->
        <Label fx:id="lblDate" alignment="CENTER_RIGHT" layoutX="484.0" layoutY="93.0"
               prefHeight="24.0" prefWidth="152.0" text="2021-10-11">
            <font><Font size="17.0"/></font>
        </Label>

        <!-- Total -->
        <Label fx:id="lblTotal" layoutX="22.0" layoutY="485.0" text="TOTAL : 0.00">
            <font><Font size="32.0"/></font>
        </Label>

        <!-- Place Order Button -->
        <Button fx:id="btnPlaceOrder" layoutX="537.0" layoutY="490.0" text="Place Order"
                onAction="#btnPlaceOrder_OnAction"
                prefHeight="35.0" prefWidth="101.0"
                style="-fx-cursor: hand; -fx-background-color: orange; -fx-text-fill: black;"/>
    </children>
</AnchorPane>
